{
  "appID": "nginx0051",
  "cmd": null,
  "cpus": 0.02,
  "mem": 6,
  "disk": 0,
  "runAs": "xcm",
  "instances": 3,
  "constraints": [ 
	  "hostname:UNIQUE",
          "vcluster:LIKE:dataman"
  ], 
  "container": {
    "docker": {
      "image": "nginx:1.10",
      "network": "BRIDGE",
      "forcePullImage": false,
      "privileged": true,
      "parameters": [
        {
            "key": "label",
	    "value": "APP_ID=nginx"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp",
          "name": "web"
        }
      ]
    },
    "type": "DOCKER",
    "volumes": [
      {
        "hostPath": "/home",
        "containerPath": "/data",
        "mode": "RW"
      }
    ]
  },
  "uris": [
      "https://nginx.org/download/nginx-1.8.1.tar.gz"
  ],
  "env": {
    "DB": "mysql"
  },
  "labels": {
    "USER_ID": "1"
  },
  "killPolicy": {
    "duration": 5
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "path": "/",
      "delaySeconds": 15,
      "gracePeriodSeconds": 5,
      "intervalSeconds": 3,
      "timeoutSeconds": 3,
      "consecutiveFailures": 5
    }
 ],
  "updatePolicy": {
	  "updateDelay": 5,
	  "maxRetries": 3,
	  "maxFailovers": 3,
	  "action": "rollback"
  }
}
